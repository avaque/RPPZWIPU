<!DOCTYPE html>
<html>

<head>
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/png" href="../images/flower-icon.png"/>
    <link rel="stylesheet" type="text/css" href="../vendor/normalize.css">
    <link rel="stylesheet" type="text/css" href="../styles/main.css">
    <meta http-equiv="content-type" content="text/html; charset=utf-8"/>
</head>

<body class="content">

<%- include(`partials/header`); %>

<main class="main">
    <div class="centered-container">
        <h1 class="decorated-title font-secondary main-color">Update <span class="main-color-emphasized">
                            Existing</span> Item</h1>
        <div class="separator"></div>
    </div>
    <section class="section secondary-color-bg">
        <div class="container">
            <form action="/management/updateitem" method="post">
                <fieldset class="fieldset">
                    <div class="label-input">
                        <label for="itemId">Pick item:</label>
                        <% locals.selectData = locals.itemSelect; %>
                        <%- include('partials/_select.ejs'); %>
                    </div>
                    <div class="label-input">
                        <label for="name">Name:</label>
                        <input id="name" name="name" type="text" size="30">
                    </div>
                    <div class="label-input">
                        <label for="price">Price (HRK):</label>
                        <input id="price" name="price" type="text">
                    </div>
                    <div class="label-input">
                        <label for="categoryId">Category:</label>
                        <% locals.selectData = locals.categorySelect; %>
                        <%- include('partials/_select.ejs'); %>
                    </div>
                    <div class="label-input">
                        <label for="imageUrl">Image (URL):</label>
                        <input id="imageUrl" name="imageUrl" type="text" size="40">
                    </div>
                    <hr>
                    <div class="submitButtons">
                        <input class="btn" type="submit">
                        <input class="btn" type="reset">
                    </div>
                </fieldset>
            </form>
        </div>
    </section>
</main>

<%- include(`partials/footer`); %>

</body>

</html>